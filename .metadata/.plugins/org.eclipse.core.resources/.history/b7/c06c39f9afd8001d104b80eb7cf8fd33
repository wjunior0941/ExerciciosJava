		//EX.03:
		Scanner sc = new Scanner(System.in);
		int alcool=0;
		int gasolina=0;
		int diesel=0;
		
		int tipo = sc.nextInt();
		System.out.println("Qual o código?");
		
		
		while(tipo != 4) {
			if (tipo == 1) {
				alcool++;
				System.out.println("Àlcool");
			} else if (tipo == 2) {
				gasolina++;
				System.out.println("Gasolina");
			} else if (tipo == 3) {
				diesel++;
				System.out.println("Diesel");
			
			}
			System.out.println("MUITO OBRIGADO!");
		}
	}

}
